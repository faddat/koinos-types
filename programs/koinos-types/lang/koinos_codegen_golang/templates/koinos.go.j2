{% elif decl["info"]["type"] == "Typedef" %}{{typedef(decl)}}
{% elif decl["info"]["type"] == "BaseType" %}{# Ignore base types for now #}
{% elif decl["info"]["type"] == "EnumClass" %}{{enum(decl)}}
