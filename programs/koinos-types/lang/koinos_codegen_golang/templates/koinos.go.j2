{%- macro typeref(tref) -%}
{%- if tref["info"]["type"] == "IntLiteral" %}{{tref["value"]}}
{%- elif tref["name"][-1] == "vector" -%}{{vector(tref)}}
{%- elif tref["name"][-1] == "fixed_blob" -%}{{fixed_blob(tref)}}
{%- elif tref["name"][-1] == "variant" -%}{{variant(tref)}}
{%- elif tref["name"][-1] == "boolean" -%}bool
{%- else -%}
{{tref["name"][-1]}}
{%- if tref["targs"] is not none -%}{{template(tref["targs"])}}{%- endif -%}
{%- endif -%}
{%- endmacro -%}

{%- macro struct_serialization(decl) -%}
func (n {{decl["name"]}}) Serialize(vblob variable_blob) variable_blob {
{%- for field in decl["fields"] %}
    vb = {{field["name"]}}.Serialize(vb){% endfor %}
    return vb
}
{%- endmacro -%}

{%- macro struct(decl) -%}
// ----------------------------------------
//  Struct: {{decl["name"]}}
// ----------------------------------------

{# // {{decl}} #}type {{decl["name"]}} struct {
{% if decl["fields"]|length > 0 -%}
{%- for field in decl["fields"] %}    {{field["name"]}} {{typeref(field["tref"])}}
{% endfor %}
{%- endif -%}
}

{{struct_serialization(decl)}}
{% endmacro -%}

{%- macro typedef(decl) -%}
type {{decl["name"]}} {{typeref(decl["tref"])}}
{% endmacro -%}

{%- macro enum(decl) -%}
// ----------------------------------------
//  Enum: {{decl["name"]}}
// ----------------------------------------

type {{decl["name"]}} uint32

const (
{%- for entry in decl["entries"] %}
    {{entry["name"]}} {{decl["name"]}} = {{entry["value"]}}
{%- endfor %}
)
{% endmacro -%}

